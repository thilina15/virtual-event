<br>
<center>
    <h3>EVENTS</h3>
</center>
<br>
<hr>
<div class="container">
  <% events.forEach(event=>{%>
        
    <center>
      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-7">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary">EVENT</strong>
              <h3 class="mb-0"><%=event.name%></h3>
              <p class="card-text mb-auto"><%=event.description%></p>
              <a href="/event/summary/<%=event.id%>" class="stretched-link">visit Event</a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <img src="<%=event.notice%>" width="300" height="200" alt="">
            </div>
          </div>
        </div>
        <div class="col-md-1">
          <form action="/event/remove/<%=event.id%>" method="GET">
            <button type="submit" class="btn btn-danger">Close Event</button>
          </form>
        </div>
        <div class="col-md-2"></div>
      </div>
          
    </center>

<%}) %> 
</div>
    



