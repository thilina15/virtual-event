<br>

<div>
        
  <center>
      <div class="col-md-8">
          <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
              <strong class="d-inline-block mb-2 text-primary">NEW EVENT</strong>
              <h3 class="mb-0">Request a new Event..</h3>
              <p class="card-text mb-auto">Once you request an Event, we will contact you for the next part..</p>
              <a href="#" class="stretched-link">send request</a>
            </div>
            <div class="col-auto d-none d-lg-block">
              <img src="/public/images/img_03.jpg" height="200" width="300">
            </div>
          </div>
        </div>
  </center>
</div>

<% if(events){
    events.forEach(event=>{ %>
    <div>
        
        <center>
            <div class="col-md-8">
                <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                  <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">EVENT</strong>
                    <h3 class="mb-0"><%=event.name%></h3>
                    <p class="card-text mb-auto"><%=event.description%></p>
                    <a href="/event/<%=event.id%>" class="stretched-link">visit Event</a>
                  </div>
                  <div class="col-auto d-none d-lg-block">
                    <img src="<%=event.notice%>" height="200" width="300">
                  </div>
                </div>
              </div>
        </center>
    </div>
    <% })
} %> 

